{
    "name": "untt/oauth2-microsoft",
    "description": "Microsoft OAuth2 Provider for The PHP League OAuth2 Client",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "keywords": ["oauth", "oauth2", "client", "authorization", "microsoft", "azure", "entra"],
    "authors": [
        {
            "name": "Thomas Unterreitmeier",
            "email": "untdev@icloud.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "league/oauth2-client": "^2.6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.64"
    },
    "autoload": {
        "psr-4": {
            "Unt\\OAuth2\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Unt\\OAuth2\\Client\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "php -dxdebug.mode=coverage vendor/bin/phpunit --coverage-html coverage",
        "check:static": "phpstan analyse",
        "fix:style": "php-cs-fixer fix",
        "check:style": "php-cs-fixer fix --dry-run --diff",
        "check": [
            "@check:style",
            "@check:static",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}